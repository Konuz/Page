# Wymuś HTTPS
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{HTTPS} !=on
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# Ukryj listing katalogów
Options -Indexes

# (Opcjonalnie) odkomentuj blok, aby ograniczyć dostęp IP
#<RequireAll>
#    Require ip 192.0.2.0/24
#    Require ip 198.51.100.23
#</RequireAll>

# Zabezpiecz pliki konfiguracyjne i backupy
<FilesMatch "(?:\.env|config\.php|\.json|\.bak)$">
    Require all denied
</FilesMatch>
